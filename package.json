{
	"name": "feenox-syntax-support",
	"displayName": "FeenoX Syntax Support",
	"description": "Syntax support for FeenoX scripts",
	"author": "Federico Fern√°ndez Erbes",
	"license": "MIT",
	"publisher": "FernandezErbes",
	"version": "1.0.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/FernandezErbes/feenox-syntax-support"
	},
	"categories": [],
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.63.0"
	},
	"activationEvents": [
		"onLanguage:feenox"
	],
	"main": "./client/out/extension",
	"contributes": {
		"languages": [
			{
				"id": "feenox",
				"aliases": [
					"FeenoX",
					"feenox"
				],
				"extensions": [
					".fee"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "feenox",
				"scopeName": "source.feenox",
				"path": "./syntaxes/feenox.tmLanguage.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh",
		"deploy": "vsce publish --yarn"
	},
	"devDependencies": {
		"@types/mocha": "^10.0.0",
		"@types/node": "^18.11.9",
		"@typescript-eslint/eslint-plugin": "^5.43.0",
		"@typescript-eslint/parser": "^5.43.0",
		"eslint": "^8.28.0",
		"mocha": "^10.1.0",
		"typescript": "^4.9.3",
		"vsce": "^2.14.0"
	}
}
